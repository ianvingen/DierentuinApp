@model DierentuinApp.Models.Enclosure
@using DierentuinApp.Helpers

@{
    ViewData["Title"] = "Verwijderen - " + Model.Name;
}

<h1>Verblijf verwijderen</h1>

<div class="alert alert-danger">
    <h4>Weet je zeker dat je dit verblijf wilt verwijderen?</h4>
    @if (Model.Animals.Any())
    {
        <p><strong>Let op:</strong> Er zijn nog @Model.Animals.Count dieren in dit verblijf!</p>
    }
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Naam</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Klimaat</dt>
            <dd class="col-sm-9">@Model.Climate.GetDisplayName()</dd>

            <dt class="col-sm-3">Grootte</dt>
            <dd class="col-sm-9">@Model.Size mÂ²</dd>

            <dt class="col-sm-3">Aantal dieren</dt>
            <dd class="col-sm-9">@Model.Animals.Count</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Ja, verwijderen</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>

