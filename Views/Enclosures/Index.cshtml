@model IEnumerable<DierentuinApp.Models.Enclosure>
@using DierentuinApp.Models

@{
    ViewData["Title"] = "Verblijven";
}

<h1>Verblijven</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nieuw verblijf toevoegen</a>
</p>

<!-- Filter formulier -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-3">
            <input type="text" name="search" class="form-control" placeholder="Zoek op naam" value="@ViewBag.CurrentSearch" />
        </div>
        <div class="col-md-3">
            <select name="climate" class="form-select">
                <option value="">-- Klimaat --</option>
                @foreach (var c in Enum.GetValues<Climate>())
                {
                    <option value="@c" selected="@(ViewBag.CurrentClimate != null && (Climate)ViewBag.CurrentClimate == c)">@c</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <select name="security" class="form-select">
                <option value="">-- Beveiliging --</option>
                @foreach (var s in Enum.GetValues<SecurityLevel>())
                {
                    <option value="@s" selected="@(ViewBag.CurrentSecurity != null && (SecurityLevel)ViewBag.CurrentSecurity == s)">@s</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-secondary">Zoeken</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Klimaat</th>
            <th>Habitat</th>
            <th>Beveiliging</th>
            <th>Grootte (mÂ²)</th>
            <th>Aantal dieren</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enclosure in Model)
        {
            <tr>
                <td>@enclosure.Name</td>
                <td>@enclosure.Climate</td>
                <td>@enclosure.HabitatType</td>
                <td>@enclosure.SecurityLevel</td>
                <td>@enclosure.Size</td>
                <td>@enclosure.Animals.Count</td>
                <td>
                    <a asp-action="Details" asp-route-id="@enclosure.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@enclosure.Id" class="btn btn-sm btn-warning">Bewerken</a>
                    <a asp-action="Delete" asp-route-id="@enclosure.Id" class="btn btn-sm btn-danger">Verwijderen</a>
                </td>
            </tr>
        }
    </tbody>
</table>

