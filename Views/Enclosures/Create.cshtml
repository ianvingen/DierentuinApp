@model DierentuinApp.Models.Enclosure

@{
    ViewData["Title"] = "Nieuw verblijf toevoegen";
}

<h1>Nieuw verblijf toevoegen</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Naam</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Climate" class="form-label">Klimaat</label>
                <select asp-for="Climate" asp-items="Html.GetEnumSelectList<DierentuinApp.Models.Climate>()" class="form-select"></select>
            </div>
            
            <div class="mb-3">
                <label asp-for="HabitatType" class="form-label">Habitat</label>
                <select asp-for="HabitatType" asp-items="Html.GetEnumSelectList<DierentuinApp.Models.HabitatType>()" class="form-select"></select>
            </div>
            
            <div class="mb-3">
                <label asp-for="SecurityLevel" class="form-label">Beveiligingsniveau</label>
                <select asp-for="SecurityLevel" asp-items="Html.GetEnumSelectList<DierentuinApp.Models.SecurityLevel>()" class="form-select"></select>
            </div>
            
            <div class="mb-3">
                <label asp-for="Size" class="form-label">Grootte (mÂ²)</label>
                <input asp-for="Size" class="form-control" type="number" step="0.1" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Opslaan</button>
            <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

