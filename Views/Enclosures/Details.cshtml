@model DierentuinApp.Models.Enclosure

@{
    ViewData["Title"] = "Details - " + Model.Name;
}

<h1>@Model.Name</h1>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Klimaat</dt>
            <dd class="col-sm-9">@Model.Climate</dd>

            <dt class="col-sm-3">Habitat</dt>
            <dd class="col-sm-9">@Model.HabitatType</dd>

            <dt class="col-sm-3">Beveiliging</dt>
            <dd class="col-sm-9">@Model.SecurityLevel</dd>

            <dt class="col-sm-3">Grootte</dt>
            <dd class="col-sm-9">@Model.Size mÂ²</dd>
        </dl>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        <h5>Dieren in dit verblijf (@Model.Animals.Count)</h5>
    </div>
    <div class="card-body">
        @if (Model.Animals.Any())
        {
            <ul class="list-group">
                @foreach (var animal in Model.Animals)
                {
                    <li class="list-group-item">
                        <a asp-controller="Animals" asp-action="Details" asp-route-id="@animal.Id">
                            @animal.Name (@animal.Species)
                        </a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">Geen dieren in dit verblijf.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Bewerken</a>
    <a asp-action="Index" class="btn btn-secondary">Terug naar lijst</a>
</div>

