@model DierentuinApp.Models.Animal

@{
    ViewData["Title"] = "Verwijderen - " + Model.Name;
}

<h1>Dier verwijderen</h1>

<div class="alert alert-danger">
    <h4>Weet je zeker dat je dit dier wilt verwijderen?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Naam</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Soort</dt>
            <dd class="col-sm-9">@Model.Species</dd>

            <dt class="col-sm-3">Categorie</dt>
            <dd class="col-sm-9">@(Model.Category?.Name ?? "Geen")</dd>

            <dt class="col-sm-3">Verblijf</dt>
            <dd class="col-sm-9">@(Model.Enclosure?.Name ?? "Geen")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Ja, verwijderen</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>

