@model IEnumerable<DierentuinApp.Models.Category>

@{
    ViewData["Title"] = "Categorieën";
}

<h1>Categorieën</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nieuwe categorie toevoegen</a>
</p>

<!-- Filter formulier -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-4">
            <input type="text" name="search" class="form-control" placeholder="Zoek op naam" value="@ViewBag.CurrentSearch" />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-secondary">Zoeken</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Aantal dieren</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Animals.Count</td>
                <td>
                    <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Bewerken</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Verwijderen</a>
                </td>
            </tr>
        }
    </tbody>
</table>

